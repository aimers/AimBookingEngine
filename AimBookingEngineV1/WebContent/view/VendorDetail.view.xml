<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.ui.medApp.view.VendorDetail" xmlns:l="sap.ui.layout"
	xmlns:vbm="sap.ui.vbm" xmlns:me="sap.ui.unified" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page class="mainPage" id="mainPage" showNavButton="true"
		navButtonPress="navToListPage">
		<content>
			<Panel class="detailPanel" expandable="true" expanded="true">
				<headerToolbar>
					<Toolbar height="5rem">
						<VBox width="100%" class="vendorItems" items="{/vendorsDetail}">
							<HBox width="100%">
								<VBox width="49%">
									<HBox justifyContent="Start" class="vendorAddress">
										<ToggleButton press="handleAddFavorite" icon="sap-icon://favorite"
											pressed="{path:'USRID', formatter:'sap.ui.medApp.global.globalFormatter.checkFavorite'}"></ToggleButton>
										<Label text="{PRFIX}{DSPNM}" />
									</HBox>
									<!-- <HBox alignItems="Center" class="vendorAddress"> <Text text="{uqnm} 
										, {clnm}" /> </HBox> -->
									<HBox alignItems="Center" class="vendorAddress" items="{Address}">
										<Text text="{LOCLT} , {CTYID}" />
									</HBox>
									<HBox alignItems="Center" items="{Characteristics}" class="imgLabelBox">
										<Image
											src="{path:'VALUE', formatter:'sap.ui.medApp.global.globalFormatter.getVendorImageUrl'}"
											densityAware="false" press="handleSelectDialogPress" width="40px"
											height="30px"
											visible="{path:'CHRID', formatter:'sap.ui.medApp.global.globalFormatter.checkImage'}" />
									</HBox>
								</VBox>
								<VBox width="49%">
									<HBox width="100%" justifyContent="End">

										<HBox width="50%" alignItems="Center" class="vendorRecommend"
											justifyContent="End"
											visible="{path:'Address', formatter: 'sap.ui.medApp.global.globalFormatter.getDistanceFlag'}">
											<Image src="assets/img/Location-Pointer.png" width="70%"
												densityAware="false" />
											<Text
												text="{path:'Address', formatter: 'sap.ui.medApp.global.globalFormatter.getDistance'} KMs away" />
										</HBox>
										<HBox width="50%" alignItems="Center" class="vendorRecommend"
											justifyContent="End">
											<Select selectedKey="1" class="vendorRuleSelect" change ="handleRuleSelection" id="SelectRule">
												<core:Item key="1" text="Auto Approval" />
												<core:Item key="2" text="Manual Approval" />
												<core:Item key="3" text="Call" />
											</Select>
										</HBox>
									</HBox>

									<HBox justifyContent="End">
										<HBox width="60%" justifyContent="End" items="{Address}">
											<Link text="Get Location" href="http://maps.google.com/?q={LONGT},{LATIT}"
												target="_blank" emphasized="true"></Link>
										</HBox>
									</HBox>
								</VBox>
							</HBox>
						</VBox>
					</Toolbar>
				</headerToolbar>
				<content>
					<VBox>
						<HBox width="98%">
							<HBox width="50%" justifyContent="Start">
								<Label text="Select Date"></Label>
							</HBox>
							<HBox width="50%" justifyContent="End">
								<RadioButtonGroup class="sapUiMediumMarginBottom"
									selectedIndex="1" select="changeToOneWeek" columns="3"
									id="radioWeekly">
									<buttons>
										<RadioButton text="Weekly" />
										<RadioButton text="Monthly" />
									</buttons>
								</RadioButtonGroup>
								<!-- </RadioButtonGroup> <RadioButton text="Weekly" select="changeToOneWeek" 
									id="radioWeekly"/> <RadioButton text="Monthly" select="changeToOneMonth" 
									id="radioMonthly"/> -->
							</HBox>
						</HBox>
						<VBox id="monthCalenderView" width="99%">
							<me:Calendar width="100%" class="monthCalender"
								select="handleWeekCalender">
							</me:Calendar>
						</VBox>
						<VBox visible="false" alignItems="Stretch" justifyContent="Start"
							class="weekCalenderView" id="weekCalenderView">
							<HBox alignItems="Start" justifyContent="SpaceAround" class="MorningSlot"></HBox>
							<HBox alignItems="Start" justifyContent="SpaceAround" class="AfternoonSlot"></HBox>
							<HBox alignItems="Start" justifyContent="SpaceAround" class="EveningSlot"></HBox>
							<HBox alignItems="Start" justifyContent="SpaceAround" class="NightSlot"></HBox>
						</VBox>
            <HBox alignItems = "Center"   justifyContent = "SpaceAround" id="callBox" visible="false">
              <Button icon="sap-icon://outgoing-call"></Button>
              <Text class="CallBox"></Text>
            </HBox>
					</VBox>
				</content>
			</Panel>
		</content>
	</Page>
</core:View>