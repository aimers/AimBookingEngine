<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.ui.medApp.view.VendorDetail" xmlns:l="sap.ui.layout"
	xmlns:vbm="sap.ui.vbm" xmlns:me="sap.ui.unified" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page class="mainPage" id="mainPage" showNavButton="true"
		navButtonPress="navToListPage">
		<content>
			<Panel class="detailPanel" expandable="true" expanded="true">
				<headerToolbar>
					<Toolbar height="5rem">
						<VBox width="100%" class="vendorItems" items="{/vendorsDetail}">
							<HBox width="100%">
								<VBox width="49%">
									<VBox justifyContent="Center" class="vendorAddress">
										<Label text="{PRFIX}{DSPNM}" />
									</VBox>
									<!-- <HBox alignItems="Center" class="vendorAddress"> <Text text="{uqnm} 
										, {clnm}" /> </HBox> -->
									<HBox alignItems="Center" class="vendorAddress" items="{Address}">
										<Text text="{LOCLT} , {CTYID}" />
									</HBox>
									<HBox alignItems="Center" items="{Characteristics}" class="imgLabelBox">
										<Image
											src="{path:'VALUE', formatter:'sap.ui.medApp.global.globalFormatter.getVendorImageUrl'}"
											densityAware="false" press="handleSelectDialogPress" width="40px"
											height="30px"
											visible="{path:'CHRID', formatter:'sap.ui.medApp.global.globalFormatter.checkImage'}" />
									</HBox>
								</VBox>
								<VBox width="49%">
									<HBox width="100%" justifyContent="End">
										<HBox width="50%" alignItems="Center" class="vendorRecommend"
											justifyContent="End"
											visible="{path:'ratin', formatter:'sap.ui.medApp.global.globalFormatter.checkRating'}">
											<Image src="assets/img/ecommerce_86-32.png" width="70%"
												densityAware="false" />
											<Text text="{ratin} Recommendations" />
										</HBox>
										<HBox width="50%" alignItems="Center" class="vendorRecommend"
											justifyContent="End"
											visible="{path:'Address', formatter: 'sap.ui.medApp.global.globalFormatter.getDistanceFlag'}">
											<Image src="assets/img/Location-Pointer.png" width="70%"
												densityAware="false" />
											<Text
												text="{path:'Address', formatter: 'sap.ui.medApp.global.globalFormatter.getDistance'} KMs away" />
										</HBox>
									</HBox>
									<HBox justifyContent="End">
										<Label text="{i18n>AVAILABLE_DAY} :" />
										<HBox items="{/vendorsAvailableTime}" width="60%"
											justifyContent="End">
											<Text
												text="{path:'Date', formatter:'sap.ui.medApp.global.globalFormatter.getDayName'} , "></Text>
										</HBox>
									</HBox>
									<HBox justifyContent="End">
										<Label text="{i18n>AVAILABLE_TIME} :" />
										<HBox width="60%" justifyContent="End">
											<Text
												text="{path:'/vendorsAvailableTime/0/DayStartTime'}-{path:'/vendorsAvailableTime/0/DayEndTime'}"></Text>
										</HBox>
									</HBox>
									<HBox justifyContent="End">
										<HBox width="60%" justifyContent="End" items="{Address}">
											<Link text="Get Location" href="http://maps.google.com/?q={LONGT},{LATIT}"
												target="_blank" emphasized="true"></Link>
										</HBox>
									</HBox>
								</VBox>
							</HBox>
						</VBox>
					</Toolbar>
				</headerToolbar>
				<content>
					<VBox>
						<HBox width="98%">
							<HBox width="50%" justifyContent="Start">
								<Label text="Select Date"></Label>
							</HBox>
							<HBox width="50%" justifyContent="End">
								<RadioButton text="Weekly" select="changeToOneWeek" />
								<RadioButton text="Monthly" select="changeToOneMonth"
									selected="true" />
							</HBox>
						</HBox>
						<VBox id="monthCalenderView" width="99%">
							<me:Calendar width="100%" class="monthCalender"
								select="handleWeekCalender">
							</me:Calendar>
						</VBox>
						<HBox alignItems="Start" justifyContent="SpaceAround"
							items="{/vendorsAvailableTime}" class="weekCalenderView" id="weekCalenderView"
							visible="false">
							<items>
								<VBox class="daySchedule" renderType="Div">
									<VBox class="CalenderDate">
										<Label text="{path:'Date', formatter:'.getDateLabel'}" />
									</VBox>
									<VBox items="{path:'TimeSlots'}" class="CalenderTime">
										<Link
											text="{path:'START', formatter:'.getCorrectTime'}-{path:'END', formatter:'.getCorrectTime'}"
											press="handleBookingTime"
											enabled="{path:'STATUS', formatter : 'sap.ui.medApp.global.globalFormatter.getBookingStatus'}" />
									</VBox>
								</VBox>
							</items>
						</HBox>
						<Bar>
							<contentRight>
								<Button text="Cancel" press="handleCancelBooking" />
							</contentRight>
						</Bar>
					</VBox>
				</content>
			</Panel>
		</content>
	</Page>
</core:View>