<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:c="sap.ui.commons" controllerName="sap.ui.medApp.view.VendorFilter"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false">
		<content>
		  <VBox width="90%" height="5%" alignItems="End">
		    <Button text="Apply" press="handleFilter" class="buttonDesign"/>
		  </VBox>
			<VBox width="90%" class="appointment" height="20%">
				<Label text="{i18n>APPOINTMENT_DAY}" class="filterLabel" />
				<HBox  class="weekDayFilter">
					<ToggleButton text="Mon" pressed="true"></ToggleButton>
					<ToggleButton text="Tue" pressed="true"></ToggleButton>
					<ToggleButton text="Wed" pressed="true"></ToggleButton>
					<ToggleButton text="Thu" pressed="true"></ToggleButton>
					<ToggleButton text="Fri" pressed="true"></ToggleButton>
					<ToggleButton text="Sat" pressed="true"></ToggleButton>
					<ToggleButton text="Sun" pressed="true"></ToggleButton>
				</HBox>
			</VBox>
			<VBox height="15%" class="appointment">
				<Label text="{i18n>SELECT_TIME}" class="filterLabel"></Label>
				<c:RangeSlider max="2400" min="0" value="0" value2="2400"
					totalUnits="3" smallStepWidth="1" stepLabels="true" labels="00:00, 12:00, 24:00"
					class="filterLabel"></c:RangeSlider>
			</VBox>
			<VBox width="100%" height="50%">
				<SearchField liveChange="onSearch" width="100%" height="10%" />
				<List id="idList" items="{/vendorsCategory}" selectionChange="onSelectionChange"
					mode="MultiSelect" includeItemInSelection="true" growing="true"
					growingThreshold="4" growingScrollToLoad="true" class="filterCategoryList">
					<items>
						<StandardListItem title="{DESCR}"
							iconDensityAware="false" iconInset="false" selected="{selected}"/>
					</items>
				</List>
			</VBox>
		</content>
	</Page>
</core:View>