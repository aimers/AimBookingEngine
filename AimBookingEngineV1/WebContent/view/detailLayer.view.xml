<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="app.home.detailLayer" xmlns:l="sap.ui.layout"
	xmlns:commons="sap.ui.commons" xmlns:viz="sap.viz.ui5" xmlns:da="sap.viz.ui5.data"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page class="mainDetailPage mainPage">
		<customHeader>
			<Bar class="header" width="100%" height="12%">
				<contentLeft>
					<HBox class="appName">
						<VBox>
							<VBox class="headerleft top">
								<Text text="John" />
							</VBox>
							<VBox class="headerleft">
								<Text text="Deere" />
							</VBox>
						</VBox>
					</HBox>
				</contentLeft>
				<contentMiddle>
					<HBox class="logo" hAlign="left">
						<Text class="logotext" text="{i18n>SECONDLAYER_DTC_MAIN_HEADING}" />
					</HBox>
				</contentMiddle>
				<contentRight>
					<HBox class="headerMenu">
						<Link text="EID" class="separator"></Link>
						<Link text="LUMIRA" class="separator"></Link>
						<Link text="TABLEAU" class="separator"></Link>
					</HBox>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<VBox width="100%" justifyContent="Center" class="middleContent">
				<VBox width="90%">
					<HBox class="innerContentHeader">
						<Text text="{i18n>DETAILLAYER_HEADING}" />
					</HBox>
					<HBox>
						<Text text="{i18n>DETAILLAYER_SUB_HEADING}"></Text>
					</HBox>
					<HBox>
						<Table class="detailTable" id="detailTable" inset="false" items="{/ProductCollection}">

							<columns>
								<Column minScreenWidth="Tablet">
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
								</Column>

							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{Name}" />
										<Text text="{Value}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</HBox>
				</VBox>
				<VBox id="lineGraph" width="90%">
					<viz:Line id="lineChart" width="100%" selectData="navtoNew">
						<viz:title>
							<viz:types.Title visible="true" />
						</viz:title>
						<viz:xAxis>
							<viz:types.Axis>
								<viz:axisline>
									<viz:types.Axis_axisline visible="true">
									</viz:types.Axis_axisline>
								</viz:axisline>
								<viz:title>
									<viz:types.Axis_title visible="true" text="Time"></viz:types.Axis_title>
								</viz:title>
							</viz:types.Axis>
						</viz:xAxis>
						<viz:yAxis>
							<viz:types.Axis enableLabelSelection="false"
								forceLabelArea="true">
								<viz:axisline>
									<viz:types.Axis_axisline visible="true">
									</viz:types.Axis_axisline>
								</viz:axisline>
								<viz:title>
									<viz:types.Axis_title visible="true"></viz:types.Axis_title>
								</viz:title>
							</viz:types.Axis>
						</viz:yAxis>
						<viz:dataset>
							<viz:data.FlattenedDataset id="Line"
								data="{measures>/results}" measures="{measures>/results1}">
								<viz:dimensions>
									<da:DimensionDefinition axis="1"
										value="{measures>TIMESTAMP}" name="Time"></da:DimensionDefinition>
								</viz:dimensions>
								<viz:measures>
									<viz:data.MeasureDefinition name="{measures>name}" />
								</viz:measures>
							</viz:data.FlattenedDataset>
						</viz:dataset>
					</viz:Line>
				</VBox>
			</VBox>
		</content>
		<footer>
			<Bar class="footer" width="100%" height="8%">
				<contentLeft>
					<Button icon="../EvidencePackage/assets/img/media_revert_48.png"
						class="footerButtonLink" press="navToHome"></Button>
					<Button text="Back to Top 10 List" class="footerButtonLink"
						press="navToGraphPage"></Button>
				</contentLeft>
			</Bar>
		</footer>
	</Page>
</core:View>