<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="sap.ui.medApp.view.Login"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page enableScrolling="false" showHeader="false" backgroundDesign="Solid">
		<content>
			<VBox width="100%" height="90%" alignItems="Center">
				<VBox width="20%" height="90%">
				   <HBox width="100%" height="20%" alignItems="Center" justifyContent="SpaceBetween">
						<Label text="Login Here" />
						
					</HBox>
					<HBox width="100%" height="20%" alignItems="Center" justifyContent="SpaceBetween">
            <Label id="messageBox" />
            
          </HBox>
					<HBox width="100%" height="10%" alignItems="Center" justifyContent="SpaceBetween">
						<Label text="Username" />
						<Input id="usrNme"/>
					</HBox>
					<HBox width="100%" height="10%" alignItems="Center" justifyContent="SpaceBetween">
						<Label  text="Passowrd" />
						<Input id="pswd"/>
					</HBox>
					<HBox width="100%" height="10%" alignItems="Center" justifyContent="Center">
						<Button text="Login" class="buttonDesign" press="handleLogin"/>
					</HBox>
					<HBox width="100%" height="15%" alignItems="Center" justifyContent="Center">
						<Button text="Signup" class="buttonDesign"></Button>
						<Button text="Forgot" class="buttonDesign"></Button>
					</HBox>
					<HBox width="100%" height="10%" alignItems="Center" justifyContent="Center">
						<Text text="Or Login through below sites"/>
					</HBox>
					<HBox width="100%" height="10%" alignItems="Center" justifyContent="Center">
						<VBox alignItems="Center">
						  <Image src="assets/img/twitter.png" />
						</VBox>
						<VBox alignItems="Center">
						   <Image src="assets/img/facebook.png" />
						</VBox>
					</HBox>
				</VBox>
			</VBox>
		</content>
	</Page>
</core:View>