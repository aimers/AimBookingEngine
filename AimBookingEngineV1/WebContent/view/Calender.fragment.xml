<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:c="sap.ui.commons" xmlns:me="sap.ui.unified">
	<Page showHeader="false" class="bookingBox">
		<subHeader>
			<Bar>
				<contentMiddle>
					<HBox width="98%">
						<HBox width="50%" justifyContent="Start">
							<Label text="Select Date"></Label>
						</HBox>
						<HBox width="50%" justifyContent="End">
							<RadioButton text="Weekly" select="changeToOneWeek" />
							<RadioButton text="Monthly" select="changeToOneMonth"
								selected="true" />
						</HBox>
					</HBox>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<me:Calendar width="100%" class="monthCalender"
				tapOnDate="changeToOneWeek">
			</me:Calendar>
			<HBox visible="false" alignItems="Start" justifyContent="SpaceAround"
				items="{/vendorsAvailableTime}">
				<items>

					<!-- <List items="{path:'/vendorsAvailableTime/TIMEDATA/TUES', sorter: 
						{path:'TIME',descending:false, group:true}, groupHeaderFactory: '.groupTime'}"> 
						<StandardListItem title="{path:'TIME'}" press="handleBookingTime"/> </List> 
						<VBox items="{/vendorsAvailableTime/TIMEDATA/TUES}"> <Link text="{TIME}" 
						press="handleBookingTime"/> </VBox> <VBox items="{/vendorsAvailableTime/TIMEDATA/WED}"> 
						<Link text="{TIME}" press="handleBookingTime"/> </VBox> <VBox items="{/vendorsAvailableTime/TIMEDATA/THUR}"> 
						<Link text="{TIME}" press="handleBookingTime"/> </VBox> <VBox items="{/vendorsAvailableTime/TIMEDATA/FRI}"> 
						<Link text="{TIME}" press="handleBookingTime"/> </VBox> <VBox items="{/vendorsAvailableTime/TIMEDATA/SAT}"> 
						<Link text="{TIME}" press="handleBookingTime"/> </VBox> -->
					<VBox>
					    <VBox><Label text="{path:'Date', formatter:'.getDateLabel'}"/></VBox>
						<VBox items="{TimeSlots}">
							<Link text="{path:'start', formatter:'.getCorrectTime'}-{path:'end', formatter:'.getCorrectTime'}" press="handleBookingTime" />
						</VBox>
					</VBox>
				</items>
			</HBox>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="Cancel" press="handleCancelBooking" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:FragmentDefinition>