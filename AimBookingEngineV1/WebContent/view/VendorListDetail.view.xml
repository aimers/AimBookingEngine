<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.ui.medApp.view.VendorListDetail"
	xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page class="mainPage" id="mainPage" showNavButton="{device>/isPhone}"
		navButtonPress="doNavBack"
		title="{path:'/vendorsList',formatter: 'sap.ui.medApp.global.globalFormatter.getListCount'} results found">
		<content>
			<List items="{/vendorsList}" id="VendorsList" class="VendorsList"
				mode="None">
				<items>
					<CustomListItem type="Inactive">
						<Panel expandable="true" expanded="false">
							<headerToolbar>
								<Toolbar height="5rem">
									<VBox width="100%" class="vendorItems">
										<HBox width="100%">
											<VBox width="49%">
												<HBox class="vendorAddress">
													<ToggleButton press="handleAddFavorite" icon="sap-icon://favorite"
														pressed="{path:'USRID', formatter:'sap.ui.medApp.global.globalFormatter.checkFavorite'}"></ToggleButton>
													<Label text="{PRFIX}{DSPNM}" />
												</HBox>
												<!-- <HBox alignItems="Center" class="vendorAddress"> <Text text="{uqnm} 
													, {clnm}" /> </HBox> -->
												<HBox alignItems="Center" class="vendorAddress" items="{Address}">
													<Text text="{LOCLT} , {CTYNM}" />
												</HBox>
												<HBox alignItems="Center" items="{Characteristics}"
													class="imgLabelBox">
													<Image
														src="{path:'VALUE', formatter:'sap.ui.medApp.global.globalFormatter.getVendorImageUrl'}"
														densityAware="false" press="handleSelectDialogPress"
														width="40px" height="30px"
														visible="{path:'CHRID', formatter:'sap.ui.medApp.global.globalFormatter.checkImage'}" />
												</HBox>
											</VBox>
											<HBox width="49%" justifyContent="End" alignItems="End">
												<VBox justifyContent="Center" alignItems="End">
													<HBox alignItems="Center" class="vendorRecommend"
														justifyContent="Start" 
														visible="{path:'Address', formatter: 'sap.ui.medApp.global.globalFormatter.getDistanceFlag'}">
														<Image src="assets/img/Location-Pointer.png" width="70%"
															densityAware="false" />
														<HBox items="{Address}" >
														<Text
                              text="{path:'distance'} KMs away" visible="{path:'distance', formatter: 'sap.ui.medApp.global.globalFormatter.getLabelDisplayWrite'}"/></HBox>														
													</HBox>
													<Button text="{i18n>VENDOR_DETAIL}" class="buttonDesign"
														press="handleDetailNav" />
												</VBox>
												<VBox justifyContent="Center" alignItems="End">

													<Select selectedKey="1" class="vendorRuleSelect">
														<core:Item key="1" text="Auto Approval" />
														<core:Item key="2" text="Manual Approval" />
														<core:Item key="3" text="Call" />
													</Select>
													<Button text="Book Appointment" class="buttonDesign"
														press="handleBookAppointment" />

												</VBox>

											</HBox>
										</HBox>
									</VBox>
								</Toolbar>
							</headerToolbar>
						</Panel>
					</CustomListItem>
				</items>
			</List>
		</content>
	</Page>
</core:View>