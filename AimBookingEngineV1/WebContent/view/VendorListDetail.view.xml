<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.ui.medApp.view.VendorListDetail"
	xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page class="mainPage" id="mainPage" showNavButton="{device>/isPhone}"
		navButtonPress="doNavBack"
		title="{path:'/vendorsList',formatter: 'sap.ui.medApp.global.globalFormatter.getListCount'} results found">
		<content>
			<List items="{/vendorsList}" id="VendorsList" class="VendorsList"
				mode="None">
				<items>
					<CustomListItem type="Inactive">
						<Panel expandable="true" expanded="false" >
							<headerToolbar>
								<Toolbar height="7rem">
									<l:Grid defaultSpan="L12 M12 S12" class="fullwidth sapUiSmallMarginTop">
										<l:content>
											<ObjectHeader iconDensityAware="false" iconAlt="{PRFIX}{DSPNM}"
												title="{PRFIX}{DSPNM}" number="{path:'Address/distance'}"
												numberUnit="KMs away">
												<attributes>
													<ObjectAttribute text="{Address/0/LOCLT} , {Address/0/CTYNM}" />
												</attributes>
												<layoutData>
													<l:GridData span="L4 M12 S12" />
												</layoutData>
											</ObjectHeader>

											<HBox items="{Characteristics}" class="sapUiSmallMarginTop">
												<Image
													src="{path:'VALUE', formatter:'sap.ui.medApp.global.globalFormatter.getVendorImageUrl'}"
													densityAware="false" press="handleSelectDialogPress" width="40px"
													height="30px"

													visible="{path:'CHRID', formatter:'sap.ui.medApp.global.globalFormatter.checkImage'}" />
												<layoutData>
													<l:GridData span="L4 M6 S12" />
												</layoutData>
											</HBox>
											<VBox justifyContent="End" alignItems="End">
												<ToggleButton press="handleAddFavorite" icon="sap-icon://favorite"
													pressed="{path:'USRID', formatter:'sap.ui.medApp.global.globalFormatter.checkFavorite'}"></ToggleButton>
												<HBox>
													<Button text="{i18n>VENDOR_DETAIL}" press="handleDetailNav" />
													<Button text="Book Appointment" press="handleBookAppointment" />
												</HBox>
												<layoutData>
													<l:GridData span="L4 M6 S12" />
												</layoutData>
											</VBox>
										</l:content>
									</l:Grid>











									<!-- <HBox width="49%" justifyContent="End" alignItems="End"> <VBox 
										justifyContent="Center" alignItems="End"> <HBox alignItems="Center" class="vendorRecommend" 
										justifyContent="Start" visible="{path:'Address', formatter: 'sap.ui.medApp.global.globalFormatter.getDistanceFlag'}"> 
										<Image src="assets/img/Location-Pointer.png" width="70%" densityAware="false" 
										/> <HBox items="{Address}"> <Text text="{path:'distance'} KMs away" visible="{path:'distance', 
										formatter: 'sap.ui.medApp.global.globalFormatter.getLabelDisplayWrite'}" 
										/> </HBox> </HBox> </VBox> </HBox> -->

								</Toolbar>
							</headerToolbar>
						</Panel>
					</CustomListItem>
				</items>
			</List>
		</content>
	</Page>
</core:View>