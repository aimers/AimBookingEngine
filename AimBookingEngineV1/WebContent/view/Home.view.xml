	<VBox width="100%" height="100%" alignItems="Center">
		<VBox width="60%" height="100%" alignItems="Center">
			<HBox justifyContent="Center" alignItems="Center" width="100%" class="spaceAround">
				<Image width="2rem" height="2rem" class="spaceLeft"
					src="assets/img/location.png" />
				<Input class="inputLocation" id="productInput" type="Text"
					placeholder="Landmark, Locality , City .." showSuggestion="true"
					suggestionRows="{/ProductCollection}">
					<suggestionRows>
						<ColumnListItem>
							<cells>
								<Label text="{Name}" />
								<Label text="{ProductId}" />
								<Label text="{SupplierName}" />
								<Label text="{Price} {CurrencyCode}" />
							</cells>
						</ColumnListItem>
					</suggestionRows>
				</Input>
			</HBox>
			<HBox justifyContent="Center" alignItems="Center" width="100%"
				>
				<MultiComboBox class="inputLocation" selectionChange="handleSelectionChange"
					selectionFinish="handleSelectionFinish" width="100%"
					items="{path: '/vendorsCategory', sorter: { path: 'DESCR' }}">
					<core:Item key="{ENTID}" text="{DESCR}" />
				</MultiComboBox>
				<Button class="buttonDesign" text="{i18n>SEARCH}" />
			</HBox>
			<VBox justifyContent="Center" alignItems="Center" class="homeContent spaceAround">
				<l:Grid width="100%" class="sapUiSmallMarginTop" content="{/vendorsTileCategory}"
				vSpacing="2" hSpacing="2">
					<l:content>
						<VBox alignItems="Center">
							<Image press="handleSearchKeyword"
								src="assets/img/tiles/{SICON}" densityAware="false" class="homeTileIcons"/>
							<Text text="{DESCR}" class="homeTileText"/>
							<layoutData>
								<l:GridData span="L4 M4 S4" />
							</layoutData>
						</VBox>
					</l:content>
