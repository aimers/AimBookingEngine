<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sap.ui.medApp.view.VendorList"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false">
		<subHeader>
			<Toolbar>
				<SearchField liveChange="onSearch" width="100%" />
			</Toolbar>
		</subHeader>
		<content>
			<VBox width="100%" height="100%">
				<VBox width="100%" height="50%">
					<List id="idList" selectionChange="onSelectionChange" mode="MultiSelect"
						includeItemInSelection="true" class="filterList" growingScrollToLoad="true">
						<infoToolbar>
							<Toolbar visible="false" id="idInfoToolbar">
								<Label id="idFilterLabel" />
							</Toolbar>
						</infoToolbar>
						<items>
							<StandardListItem title="Dentist"
								iconDensityAware="false" iconInset="false" />
							<StandardListItem title="Surgeon"
								iconDensityAware="false" iconInset="false" />
							<StandardListItem title="Homeopath"
								iconDensityAware="false" iconInset="false" />
							<StandardListItem title="Cardiologist"
								iconDensityAware="false" iconInset="false" />
							<StandardListItem title="Neurologist"
								iconDensityAware="false" iconInset="false" />
						</items>
					</List>
				</VBox>
				<VBox height="50%" class="appointment">
				     <Label text="Appointment Day"/>
				     <HBox >
				        <Button text="Mon"></Button>
				        <Button text="Tue"></Button>
				        <Button text="Wed"></Button>
				        <Button text="Thu"></Button>
				        <Button text="Fri"></Button>
				        <Button text="Sat"></Button>
				        <Button text="Sun"></Button>
				     </HBox>
				</VBox>
			</VBox>
		</content>
	</Page>
</core:View>